{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-undef": 0,
    "quotes": [2, "single", {"avoidEscape": true}],
    "no-unused-vars": "warn",
    "no-useless-escape": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  }
}
